<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender - skriver loggar till konsolen -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Logger fÃ¶r mer detaljerad loggning -->
    <logger name="se.jensen.mikael.springboot" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
</configuration>